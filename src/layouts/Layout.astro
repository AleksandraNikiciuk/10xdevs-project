---
import "../styles/global.css";
import { Toaster } from "../components/ui/sonner";
import { ThemeProvider } from "../components/ThemeProvider";
import Header from "../components/Header.astro";

interface Props {
  title?: string;
}

const { title = "Generate Flashcards" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      // Zapobieganie FOUC (Flash of Unstyled Content)
      const getThemePreference = () => {
        if (typeof localStorage !== "undefined") {
          const stored = localStorage.getItem("theme");
          if (stored === "light" || stored === "dark") {
            return stored;
          }
          // JeÅ›li stored === "system" lub nie ma wartoÅ›ci, sprawdÅº preferencje systemowe
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light";
      };
      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");
    </script>
  </head>
  <body class="flex flex-col min-h-screen">
    <ThemeProvider client:load>
      <Header />
      <main class="flex-1">
        <slot />
      </main>
      <slot name="before-footer" />
      <footer class="bg-md-surface border-t border-md-outline-variant">
        <div class="container mx-auto px-4 py-6 text-center text-body-medium text-md-on-surface-variant">
          <p>Made with ðŸ’œ by 10xDevs â€¢ AI-Powered Learning</p>
        </div>
      </footer>
      <Toaster client:load />
    </ThemeProvider>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
