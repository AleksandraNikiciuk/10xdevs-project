---
const { user } = Astro.locals;
---

<header class="bg-background border-b sticky top-0 z-50">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-16">
    <div class="flex-shrink-0">
      <a href="/" class="text-xl font-bold">Flashcards AI</a>
    </div>
    <div class="flex items-center space-x-4">
      {
        user ? (
          <>
            <span class="text-sm text-muted-foreground">{user.email}</span>
            <form action="/api/auth/logout" method="post">
              <button type="submit" class="text-sm font-medium hover:underline">
                Logout
              </button>
            </form>
          </>
        ) : (
          <>
            <a href="/login" class="text-sm font-medium hover:underline">
              Login
            </a>
            <a href="/register" class="text-sm font-medium hover:underline">
              Register
            </a>
          </>
        )
      }
    </div>
  </nav>
</header>
