---
import Layout from "@/layouts/Layout.astro";
import { ForgotPasswordForm } from "@/components/auth/ForgotPasswordForm";
---

<Layout title="Forgot Password">
  <main class="flex-grow flex items-center justify-center p-8">
    <div class="w-full max-w-md">
      <ForgotPasswordForm client:load />
    </div>
  </main>

  <!-- Fallback handler for password reset tokens -->
  <script is:inline>
    /* eslint-disable */
    (function () {
      console.log("[FORGOT_PASSWORD] Checking for auth tokens...");
      const hash = window.location.hash.substring(1);
      const search = window.location.search.substring(1);

      if (hash) {
        const params = new URLSearchParams(hash);
        const accessToken = params.get("access_token");
        const refreshToken = params.get("refresh_token");

        if (accessToken && refreshToken) {
          console.log("[FORGOT_PASSWORD] Found auth tokens in hash, redirecting to /auth/callback");
          window.location.href = "/auth/callback" + window.location.hash;
          return;
        }
      }

      if (search) {
        const params = new URLSearchParams(search);
        const accessToken = params.get("access_token");
        const refreshToken = params.get("refresh_token");

        if (accessToken && refreshToken) {
          console.log("[FORGOT_PASSWORD] Found auth tokens in query, redirecting to /auth/callback");
          window.location.href = "/auth/callback" + window.location.search;
        }
      }
    })();
    /* eslint-enable */
  </script>
</Layout>
